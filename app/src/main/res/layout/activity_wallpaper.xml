<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clipChildren="false"
    tools:context=".WallpaperActivity">
    <FrameLayout
        android:id="@+id/bitmap_container"
        app:layout_constraintTop_toBottomOf="@id/top_mask"
        app:layout_constraintBottom_toTopOf="@id/bottom_mask"
        app:layout_constraintStart_toEndOf="@id/left_mask"
        app:layout_constraintEnd_toStartOf="@id/right_mask"
        android:layout_height="0dp"
        android:layout_width="0dp"
        >
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            />
    </FrameLayout>
    <View
        android:id="@+id/top_mask"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.1"
        android:layout_height="0dp"
        android:background="#8FFF"
        />
    <View
        android:id="@+id/bottom_mask"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        android:layout_height="0dp"
        android:background="#8FFF"
        />
    <View
        android:id="@+id/left_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_mask"
        app:layout_constraintBottom_toTopOf="@id/bottom_mask"
        android:background="#8FFF"
        />
    <View
        android:id="@+id/right_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_mask"
        app:layout_constraintBottom_toTopOf="@id/bottom_mask"
        android:background="#8FFF"
        />
    <LinearLayout
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorSurface"
        >
        <ImageButton
            android:id="@+id/fold_toolbar_button"
            android:layout_width="@dimen/media_button_width"
            android:layout_height="@dimen/media_button_height"
            app:srcCompat="@drawable/ic_chevron_left"
            app:tint="?attr/colorPrimary"
            android:background="?attr/selectableItemBackground"
            />
        <ImageButton
            android:id="@+id/image_rotate_left_button"
            android:layout_width="@dimen/media_button_width"
            android:layout_height="@dimen/media_button_height"
            app:srcCompat="@drawable/ic_rotate_left"
            app:tint="?attr/colorPrimary"
            android:background="?attr/selectableItemBackground"
            />
        <ImageButton
            android:id="@+id/image_rotate_right_button"
            android:layout_width="@dimen/media_button_width"
            android:layout_height="@dimen/media_button_height"
            app:srcCompat="@drawable/ic_rotate_right"
            app:tint="?attr/colorPrimary"
            android:background="?attr/selectableItemBackground"
            />
        <ImageButton
            android:id="@+id/crop_off_button"
            android:layout_width="@dimen/media_button_width"
            android:layout_height="@dimen/media_button_height"
            app:srcCompat="@drawable/ic_crop"
            app:tint="?attr/colorOutline"
            android:background="?attr/selectableItemBackground"
            />
        <ImageButton
            android:id="@+id/crop_on_button"
            android:layout_width="@dimen/media_button_width"
            android:layout_height="@dimen/media_button_height"
            app:srcCompat="@drawable/ic_crop"
            app:tint="?attr/colorTertiary"
            android:background="?attr/selectableItemBackground"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/cancel_button"
            android:layout_width="@dimen/media_button_width"
            android:layout_height="@dimen/media_button_height"
            app:srcCompat="@drawable/ic_cancel"
            app:tint="?attr/colorTertiary"
            android:background="?attr/selectableItemBackground"
            />
        <ImageButton
            android:id="@+id/ok_button"
            android:layout_width="@dimen/media_button_width"
            android:layout_height="@dimen/media_button_height"
            app:srcCompat="@drawable/ic_ok"
            app:tint="?attr/colorTertiary"
            android:background="?attr/selectableItemBackground"
            />
    </LinearLayout>
    <ImageButton
        android:id="@+id/unfold_toolbar_button"
        android:layout_width="@dimen/media_button_width"
        android:layout_height="@dimen/media_button_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_chevron_right"
        app:tint="?attr/colorPrimary"
        android:background="?attr/selectableItemBackground"
        />
    <FrameLayout
        android:id="@+id/preview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#8000"
            >
            <ImageButton
                android:id="@+id/retry_button"
                android:layout_width="@dimen/media_button_width"
                android:layout_height="@dimen/media_button_height"
                app:srcCompat="@drawable/ic_cancel"
                app:tint="?attr/colorTertiary"
                android:background="?attr/selectableItemBackground"
                />
            <ImageButton
                android:id="@+id/confirm_button"
                android:layout_width="@dimen/media_button_width"
                android:layout_height="@dimen/media_button_height"
                app:srcCompat="@drawable/ic_ok"
                app:tint="?attr/colorTertiary"
                android:background="?attr/selectableItemBackground"
                />

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>